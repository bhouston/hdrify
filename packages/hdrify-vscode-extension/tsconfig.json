{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "declaration": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/preview"]
}
